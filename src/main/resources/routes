# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Home page
GET     /ui                    controllers.Assets.at(path="/public", file = "index.html")
GET     /ui/view/*path         be.wegenenverkeer.mosaic.api.WebApplicationController.index(path: String)
GET     /ui/*file              controllers.Assets.versioned(path="/public", file: Asset)

# Prometheus metrics
GET           /metrics         be.wegenenverkeer.metrics.controller.MetricsController.get()

# Happy page
->            /happy           appstatus.Routes
