{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://wegenenverkeer.be/api/verkeersborden/model/aanzicht.json",
  "type": "object",
  "description": "Gegevens van aanzicht",
  "properties": {
    "id": {
      "type": "integer"
    },
    "hoek": {
      "type": "number"
    },
    "type": {
      "type": "string",
      "enum" : [ "IDENT8", "ZELFDE_ALS_OPSTELLING", "VOOR_NIET_GEWESTWEG_GEBRUIKERS", "VOLLEDIG_KRUISPUNT" ]
    },
    "ident8": {
      "type": "string"
    },
    "wegsegmentid" : {
      "type": "number"
    },
    "borden": {
      "type": "array",
      "items": {
        "$ref": "bord.json"
      }
    }
  },
  "required": [
    "id", "hoek", "type", "borden"
  ]
}
