{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://wegenenverkeer.be/api/verkeersborden/model/opstelling.json",
  "type": "object",
  "description": "Gegevens van verkeersbordopstelling",
  "properties": {
    "properties": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "uuid": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "ACTUEEL",
            "GEPLAND_WIJZIG",
            "GEPLAND_NIEUW",
            "GEPLAND_DELETE",
            "VIRTUEEL",
            "TIJDELIJK_WIJZIG",
            "TIJDELIJK_NIEUW",
            "TIJDELIJK_DELETE"
          ]
        },
        "actief": {
          "type": "boolean"
        },
        "ident8": {
          "type": "string"
        },
        "wegsegmentid": {
          "type": "number"
        },
        "straat": {
          "type": "string"
        },
        "zijdeVanDeRijweg": {
          "type": "string",
          "enum": [
            "LINKS",
            "RECHTS",
            "MIDDEN",
            "BOVEN"
          ]
        },
        "locatie": {
          "$ref": "http://wegenenverkeer.be/api/verkeersborden/model/geojson/geometry.json"
        },
        "langsGewestweg": {
          "type": "boolean"
        },
        "aanzichten": {
          "type": "array",
          "items": {
            "$ref": "aanzicht.json"
          }
        },
        "beheerder": {
          "$ref": "http://wegenenverkeer.be/api/verkeersborden/model/beheerder.json"
        }
      },
      "required": [
        "id",
        "status",
        "actief",
        "locatie",
        "langsGewestweg",
        "aanzichten"
      ]
    }
  },
  "required": [
    "properties"
  ]
}
